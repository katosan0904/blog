<%= form_for(@blog,url: {controller: 'blog', action: 'create' }) do |f| %>
<div style="margin: 8px 0">
 <%= f.text_field :title, placeholder: 'タイトルを入力してください', value: ''  %>
 </div>
  <%= f.text_field :image %>
  <div style="margin: 8px 0">
  <%= f.text_area :content, placeholder: '本文を入力してください', style: 'width: 100%;height: 300px;' %>
   </div>
  <%= f.submit "送信" %>
  <% end %>